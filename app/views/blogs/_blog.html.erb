
<tr>
  <td><%= blog.title() %></td>
  <td>Published <%= distance_of_time_in_words(blog.created_at, Time.now)%> ago</td>
  <td width="1000"><%= blog.body() %></td>
  <td><%= link_to(blog.status, toggle_status_blog_path(blog)) %></td>
  <td><%= link_to('Show', blog) %></td>
  <td><%= link_to('Edit', edit_blog_path(blog) ) if logged_in?(:site_admin) %></td>
  <td><%= link_to('Delete Post', blog, method: :delete, data: {confirm: 'Are you sure'}) if logged_in?(:site_admin)%></td>
</tr>
<tr><td colspan="20">---------------------------------------------------------------------------------------------</td></tr>
