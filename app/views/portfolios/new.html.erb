<h1>Create a New Portfolio Item</h1>


<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title, style: "display: block" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle, style: "display: block" %>
    <%= f.text_area :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body, style: "display: block" %>
    <%= f.text_area :body %>
  </div>

  <ul>
    <%= f.fields_for :technologies do |technology_form| %>
    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name %>
    </li>
    <% end %>
  </ul>


  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
