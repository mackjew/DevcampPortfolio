    </svg> %>
    <%= image_tag(portfolio_item.thumb_image, class: "bd-placeholder-img card-img-top" ) unless portfolio_item.thumb_image.nil? %> 
    <div class="card-body">
      <span class="card-text">
        <p><%= link_to(portfolio_item.title, portfolio_show_path(portfolio_item.id)) %></p>
        <p><%= portfolio_item.subtitle %></p> 
        <p><%= portfolio_item.body %></p> 
      </span>
      
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">  </div>
        <small class="text-body-secondary">9 mins</small>
      </div>
    </div>
  </div>
</div>

