<div class="mackClass">
  <% if(flash[:alert]) %>
    <%= js add_gritter(flash[:alert], title: "MacKenzie Portfolio", time: 6000) %>
    <%= flash[:alert] %>
<% elsif(flash[:error]) %>
    <%= js add_gritter(flash[:error], title: "MacKenzie Portfolio", time: 6000) %>
    <%= flash[:error] %>
<% else %>
    <%= js add_gritter(flash[:notice], title: "MacKenzie Portfolio", time: 6000) %>
    <%= flash[:notice] %>
<% end %>
</div>